{% extends 'base.html.twig' %}

{% block title %}Détails de l'annonce{% endblock %}

{% block body %}
<div style="margin-top: 6rem;">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl m-8">
        <div class="md:flex">
            <div class="p-8">
                <h1 class="block mt-1 text-lg leading-tight font-medium text-black"><i class="fas fa-user"></i> Conducteur : {{ annonce.conducteur.nom }}{{ " " }}{{ annonce.conducteur.prenom }}</h1>
                <p class="mt-2 text-gray-500"><i class="fas fa-map-marker-alt"></i> Départ : {{ annonce.villeDepart }}</p>
                <p class="mt-2 text-gray-500"><i class="fas fa-map-marker-alt"></i> Arrivée : {{ annonce.villeArrive }}</p>
                <p class="mt-2 text-gray-500"><i class="fas fa-car"></i> Véhicule : {{ annonce.vehicule }}</p>
                <p class="mt-2 text-gray-500"><i class="fa-solid fa-euro-sign"></i> Prix : {{ annonce.prix }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
