{# templates/annonce/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle Annonce{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 sm:max-w-xl sm:mx-auto">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
            <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
                <h1 class="text-2xl font-semibold text-gray-900">Nouvelle Annonce</h1>

                {{ form_start(form, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                    <div class="relative">
                        {{ form_label(form.villeDepart, 'Ville de départ', {'label_attr': {'class': 'font-medium text-gray-900'}}) }}
                        {{ form_widget(form.villeDepart, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-500 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>

                    <div class="relative">
                        {{ form_label(form.villeArrive, 'Ville d\'arrivée', {'label_attr': {'class': 'font-medium text-gray-900'}}) }}
                        {{ form_widget(form.villeArrive, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-500 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>

                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Créer Annonce
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
