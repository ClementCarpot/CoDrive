<header class="fixed top-0 left-0 w-full z-10 flex items-center justify-between px-6 py-2 bg-blue-500 text-white dark-mode-header">
  <h1 class="flex items-center text-xl font-semibold tracking-wide">
    <a href="{{ path('accueil') }}"><img src="{{ asset('images/home.png') }}" class="h-8 object-cover object-center mr-2 rounded-lg" alt="Logo"></a>
    <a href="{{ path('accueil') }}">CoDrive</a>
  </h1>

  <nav class="flex-grow">
    <ul class="flex justify-center space-x-4">
      <li><a href="{{ path('publier_trajet') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button"><i class="fa-solid fa-pen"></i>{{ 'publishRoute'|trans }}</a></li>
      <li><a href="{{ path('annonces') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button"><i class="fa-solid fa-route"></i> {{ 'seeRoute'|trans }}</a></li>
      <li>
        <a href="{{ path('mes_reservations') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button"><i class="fa-solid fa-book-open"></i> 
          {{ 'myReservation'|trans }}
        </a>
      </li>
      <li>
        <a href="{{ path('mes_annonces') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button"><i class="fa-solid fa-book-open"></i> 
          {{ 'myAnnoucements'|trans }}
        </a>
      </li>
    </ul>
  </nav>

  <div>
    <ul class="flex items-center space-x-4">
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <li>
            <a href="{{ path('edit_profil') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button">
              <i class="fas fa-user"></i> 
              {{ 'profil'|trans }}
            </a>
          </li>
          <li>
            <a href="{{ path('deconnexion') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button">
            <i class="fa-solid fa-right-from-bracket"></i>
            {{ 'logout'|trans }}
            </a>
          </li>
      {% else %}
          <li>
            <a href="{{ path('connexion') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button">{{ 'login'|trans }}</a>
          </li>
          <li>
            <a href="{{ path('inscription') }}" class="inline-block px-4 py-2 text-blue-500 bg-white rounded hover:bg-gray-200 dark-mode-button">{{ 'register'|trans }}</a>
          </li>
      {% endif %}
          <li>
            <div class="flex items-center">
                <i class="fas fa-moon mr-2"></i>
                <div class="dark-mode-switch">
                    <input type="checkbox" id="dark-mode-checkbox" class="checkbox">
                    <label for="dark-mode-checkbox" class="label"></label>
                </div>
            </div>
          </li>
          <li>
            <a href="{{ path('change_locale', { 'locale': 'en' }) }}">{{ 'english'|trans }}</a>
            <a href="{{ path('change_locale', { 'locale': 'fr' }) }}">{{ 'french'|trans }}</a>
          </li>
    </ul>
  </div>
</header>
