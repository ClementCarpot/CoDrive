{% extends 'base.html.twig' %}

{% block title %}{{ 'register'|trans }}{% endblock %}

{% block body %}
    <div class="bg-background-image bg-cover min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 dark-mode">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-lg shadow-md dark-mode-card">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 label">
                    {{ 'register'|trans }}
                </h2>
            </div>
            {{ form_start(registrationForm) }}
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        {{ 
                            form_row(registrationForm.nom, {
                            'label': 'Nom',
                            'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark-mode-input'}
                            }) 
                        }}
                    </div>
                    <div class="mt-4">
                        {{ 
                            form_row(registrationForm.prenom, {
                            'label': 'Pr√©nom',
                            'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark-mode-input'}
                            }) 
                        }}
                    </div>
                    <div class="mt-4">
                        {{ 
                            form_row(registrationForm.email, {
                            'label': 'Email',
                            'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark-mode-input'}
                            }) 
                        }}
                    </div>
                    <div class="mt-4">
                        {{ 
                            form_row(registrationForm.password.first, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark-mode-input'}
                            }) 
                        }}
                    </div>
                    <div class="mt-4">
                        {{ 
                            form_row(registrationForm.password.second, {
                            'label': 'Confirmer le mot de passe',
                            'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark-mode-input'}
                            }) 
                        }}
                    </div>
                </div>
                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mt-8 dark:bg-gray-600 dark:hover:bg-gray-500">
                        {{ 'register'|trans }}
                    </button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div
{% endblock %}
